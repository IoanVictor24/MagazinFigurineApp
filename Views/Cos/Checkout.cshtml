@model MagazinFigurineApp.Models.Comanda
@{
    ViewData["Title"] = "Finalizare Comandă";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm p-4 border-0">
                <h3 class="mb-4 fw-bold"><i class="bi bi-truck"></i> Detalii de Livrare</h3>

                <form asp-action="ProceseazaComanda" method="post">

                    @* Setăm automat metoda de plată pentru baza de date *@
                    <input type="hidden" asp-for="MetodaPlata" value="Ramburs (Cash la Livrare)" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="exemplu@mail.com" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Telefon</label>
                            <input asp-for="Telefon" class="form-control" placeholder="07xx xxx xxx" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Adresa Completă</label>
                        <textarea asp-for="Adresa" class="form-control" rows="3" placeholder="Strada, Număr, Bloc, Scara, Apartament, Localitate..." required></textarea>
                    </div>

                    <h4 class="border-top pt-4 mb-3 fw-bold">Metodă de Plată</h4>

                    @* Alertă informativă pentru Plata Ramburs *@
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <i class="bi bi-cash-stack fs-3 me-3"></i>
                        <div>
                            <strong>Plata la Livrare (Ramburs)</strong>
                            <div class="small">Veți achita suma de <strong class="text-decoration-underline">@ViewBag.TotalFinal.ToString("C2")</strong> direct curierului în momentul primirii coletului.</div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg w-100 mt-3 shadow fw-bold py-3">
                        <i class="bi bi-check-circle-fill me-2"></i> Plasează Comanda
                    </button>
                </form>
            </div>
        </div>

        @* Coloana din dreapta cu sumarul *@
        <div class="col-md-4">
            <div class="card bg-light border-0 p-4 sticky-top" style="top: 20px;">
                <h4 class="fw-bold text-secondary">Sumar Comandă</h4>
                <hr />
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="fs-5">Total de plată:</span>
                    <strong class="h3 text-primary m-0">@ViewBag.TotalFinal.ToString("C2")</strong>
                </div>
                <div class="mt-3 text-muted small">
                    <i class="bi bi-info-circle"></i> Transportul este inclus în preț.
                </div>
            </div>
        </div>
    </div>
</div>