@model MagazinFigurineApp.Models.Comanda
@{
    ViewData["Title"] = "Finalizare Comandă";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h3 class="mb-4">Detalii de Livrare</h3>
                <form asp-action="ProceseazaComanda" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="exemplu@mail.com" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Telefon</label>
                            <input asp-for="Telefon" class="form-control" placeholder="07xx xxx xxx" required />
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-bold">Adresa Completă</label>
                        <textarea asp-for="Adresa" class="form-control" rows="3" placeholder="Strada, Nr, Bloc, Localitate..." required></textarea>
                    </div>

                    <h4 class="border-top pt-4 mb-3">Plată cu Cardul (Simulare)</h4>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <input type="text" class="form-control" placeholder="Număr card: 0000 0000 0000 0000" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="LL/AA" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="CVV" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg w-100 mt-3 shadow">Plătește @ViewBag.TotalFinal.ToString("C2")</button>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light border-0 p-4">
                <h4>Sumar</h4>
                <hr />
                <div class="d-flex justify-content-between">
                    <span>Total de plată:</span>
                    <strong class="h4 text-primary">@ViewBag.TotalFinal.ToString("C2")</strong>
                </div>
            </div>
        </div>
    </div>
</div>