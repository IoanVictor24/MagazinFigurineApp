@model MagazinFigurineApp.Models.Comanda
@{
    ViewData["Title"] = "Finalizare Comandă";
}

<style>
    /* Header Checkout */
    .checkout-header {
        background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
        padding: 100px 0 50px 0;
        margin-top: -80px;
        color: white;
        margin-bottom: 40px;
        text-align: center;
    }
</style>

<div class="checkout-header">
    <div class="container">
        <h2 class="fw-bold">Date Livrare & Plată</h2>
        <p class="text-white-50">Ultimul pas pentru a primi comanda</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        @* FORMULAR LIVRARE *@
        <div class="col-lg-8">
            <div class="card shadow border-0 p-4 mb-4">
                <h4 class="mb-4 text-secondary"><i class="bi bi-geo-alt-fill me-2"></i> Adresa de Livrare</h4>

                <form asp-action="ProceseazaComanda" method="post">
                    @* Câmp ascuns pentru metoda de plată - NECESAR PENTRU LOGICĂ *@
                    <input type="hidden" asp-for="MetodaPlata" value="Ramburs (Cash la Livrare)" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg bg-light" placeholder="nume@email.com" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Telefon</label>
                            <input asp-for="Telefon" class="form-control form-control-lg bg-light" placeholder="07xx xxx xxx" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Adresa Completă</label>
                            <textarea asp-for="Adresa" class="form-control bg-light" rows="3" placeholder="Județ, Oraș, Stradă, Număr..." required></textarea>
                        </div>
                    </div>

                    <div class="mt-4 p-3 border rounded bg-light d-flex align-items-center">
                        <i class="bi bi-cash-stack fs-2 text-success me-3"></i>
                        <div>
                            <h6 class="fw-bold mb-0">Plată Ramburs</h6>
                            <small class="text-muted">Plătești curierului la primirea coletului.</small>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mt-4 rounded-pill shadow fw-bold py-3">
                        PLASEAZĂ COMANDA
                    </button>
                </form>
            </div>
        </div>

        @* SUMAR DREAPTA *@
        <div class="col-lg-4">
            <div class="card bg-white border shadow-sm p-4 sticky-top" style="top: 100px;">
                <h5 class="fw-bold mb-3 text-uppercase text-muted small ls-1">Sumar Plată</h5>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="fs-5">Total de plată:</span>
                    <strong class="h3 text-primary m-0">@ViewBag.TotalFinal.ToString("C0")</strong>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="bi bi-info-circle me-1"></i> Transportul este inclus.
                </div>
            </div>
        </div>
    </div>
</div>