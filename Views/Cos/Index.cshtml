@model IEnumerable<MagazinFigurineApp.Models.Cos>
@{
    ViewData["Title"] = "Coșul tău";
    decimal total = ViewBag.Total ?? 0;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white p-4">
            <h2 class="mb-0">COȘUL TĂU</h2>
        </div>
        <div class="card-body p-4">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Imagine</th>
                        <th>Produs</th>
                        <th>Preț</th>
                        <th style="width: 130px;">Cantitate</th>
                        <th>Total</th>
                        <th>Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(item.Figurina.ImagineFigurina != null
                        ? $"data:image/jpeg;base64,{Convert.ToBase64String(item.Figurina.ImagineFigurina)}"
                        : Url.Content("~/images/default.jpg"))"
                                     alt="@item.Figurina.Nume"
                                      />
                            <td class="fw-bold">@item.Figurina.Nume</td>
                            <td>@item.Figurina.Pret.ToString("C2")</td>
                            <td>
                                <form asp-action="ActualizeazaCantitate" method="post" class="d-flex">
                                    <input type="hidden" name="cosId" value="@item.Id" />
                                    <input type="number" name="cantitate" value="@item.Cantitate" min="1" class="form-control form-control-sm me-1" />
                                    <button type="submit" class="btn btn-sm btn-info text-white">OK</button>
                                </form>
                            </td>
                            <td class="fw-bold">@((item.Figurina.Pret * item.Cantitate).ToString("C2"))</td>
                            <td>
                                <form asp-action="Sterge" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Șterge</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row mt-5">
                <div class="col-md-6">
                    <a asp-controller="Figurine" asp-action="Index" class="btn btn-outline-secondary btn-lg">Continuă Cumpărăturile</a>
                </div>
                <div class="col-md-6 text-end">
                    <div class="bg-light p-4 rounded shadow-sm border">
                        <h5>Subtotal: @total.ToString("C2")</h5>
                        <p class="text-muted small">Taxă transport: 15,00 RON</p>
                        <hr />
                        <h3 class="fw-bold text-success">Total: @((total + 15).ToString("C2"))</h3>
                        <a asp-action="Checkout" class="btn btn-primary btn-lg w-100 mt-3 shadow">Finalizează Comanda</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>