@model IEnumerable<MagazinFigurineApp.Models.Cos>
@{
    ViewData["Title"] = "Coș de cumpărături";
    decimal subtotal = Model?.Sum(i => i.Figurina.Pret * i.Cantitate) ?? 0;
    decimal transport = 15; // Cost fix de transport
    decimal total = subtotal + transport;
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-dark text-white">
            <div class="d-flex align-items-center">
                <i class="bi bi-cart3 fs-4 me-2"></i>
                <h2 class="mb-0">COȘUL TĂU</h2>
            </div>
            <p class="text-muted mb-0">Produsele tale selectate</p>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>Imagine</th>
                                <th>Produs</th>
                                <th>Preț</th>
                                <th>Cantitate</th>
                                <th>Total</th>
                                <th>Acțiuni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.Figurina.ImagineFigurina != null)
                                        {
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Figurina.ImagineFigurina)"
                                                 class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="img-thumbnail" style="width: 80px; height: 80px; background-color: #f5f5f5;"></div>
                                        }
                                    </td>
                                    <td>@item.Figurina.Nume</td>
                                    <td>@item.Figurina.Pret.ToString("C")</td>
                                    <td>
                                        <form asp-action="ActualizeazaCantitate" method="post" class="d-flex">
                                            <input type="hidden" name="cosId" value="@item.Id" />
                                            <input type="number" name="cantitate" value="@item.Cantitate" min="1"
                                                   class="form-control me-2" style="width: 80px;">
                                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-arrow-clockwise"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td>@((item.Figurina.Pret * item.Cantitate).ToString("C"))</td>
                                    <td>
                                        <form asp-action="Sterge" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>

                                        <form asp-controller="Figurine" asp-action="Details" method="get" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Figurina" />
                                            <button type="submit" class="btn btn-sm btn-outline-info mt-1">
                                                <i class="bi bi-info-circle"></i>
                                            </button>
                                        </form>

                                        <div class="text-end mt-3">
                                            <form asp-action="FinalizeazaComanda" method="post">
                                                <button type="submit" class="btn btn-lg btn-primary">
                                                    <i class="bi bi-credit-card"></i> Plasează Comanda
                                                </button>
                                            </form>
                                        </div>





                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-4">
                    <div class="col-md-5 offset-md-7">
                        <div class="card border-0">
                            <div class="card-body">
                                <h5 class="card-title">Sumar comandă</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span>@subtotal.ToString("C")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Transport:</span>
                                    <span>@transport.ToString("C")</span>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between fw-bold fs-5">
                                    <span>Total:</span>
                                    <span class="text-success">@total.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Figurine" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Continuă cumpărăturile
                    </a>
                    <form asp-action="FinalizeazaComanda" method="post">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Finalizează comanda
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart-x" style="font-size: 3rem; color: #6c757d;"></i>
                    <h3 class="mt-3">Coșul tău este gol</h3>
                    <p class="text-muted">Nu ai produse în coș. Adaugă produse pentru a continua.</p>
                    <a asp-controller="Figurine" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-left"></i> Înapoi la figurine
                    </a>
                </div>
            }
        </div>



