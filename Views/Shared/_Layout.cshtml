<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Universul Figurinelor</title>

    @* Bootstrap & Icons *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MagazinFigurineApp.styles.css" asp-append-version="true" />

    <style>
        /* Navbar Sticlă */
        .navbar-custom {
            transition: all 0.4s ease-in-out;
            background-color: rgba(20, 20, 20, 0.95); /* Fundal închis semi-transparent */
            backdrop-filter: blur(10px);
            padding: 15px 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

            .navbar-custom .nav-link {
                color: rgba(255, 255, 255, 0.8) !important;
                font-weight: 500;
                margin-left: 15px;
            }

                .navbar-custom .nav-link:hover {
                    color: #fff !important;
                    text-shadow: 0 0 10px rgba(255,255,255,0.5);
                }

        .navbar-brand {
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #fff !important;
        }

        /* Asigurăm că footer-ul stă jos */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: 80px; /* Spațiu pentru navbar fix */
            background-color: #f8f9fa;
        }

        /* Footer Stilizat */
        footer {
            margin-top: auto;
            background-color: #1a1a1a;
            color: #ccc;
            padding: 20px 0;
            text-align: center;
        }

            footer a {
                color: #0d6efd;
                text-decoration: none;
                font-weight: bold;
            }

                footer a:hover {
                    color: #fff;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark fixed-top navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-stars me-2"></i> Universul Figurinelor
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Acasă</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Figurine" asp-action="Index">Catalog</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-area="" asp-controller="Cos" asp-action="Index">
                                    <i class="bi bi-cart-fill"></i> Coș
                                </a>
                            </li>
                        }
                        <li class="nav-item ms-auto">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @* Container fluid pe Home pentru imagine full, container normal pe restul *@
    <div class="@(ViewData["Title"]?.ToString() == "Universul Figurinelor" ? "container-fluid p-0" : "container")">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2024 - Universul Figurinelor -
            @* AICI ESTE BUTONUL PRIVACY DIN FOOTER REPARAT *@
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Politica de Confidențialitate</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>