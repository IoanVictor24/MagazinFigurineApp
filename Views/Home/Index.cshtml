@{
    ViewData["Title"] = "Universul Figurinelor";
}

@* --- STILURI CSS LOCALE PENTRU PAGINA DE HOME --- *@
<style>
    /* Hero Section cu Imagine de Fundal și Overlay */
    .hero-section {
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1608889175123-8ee362201f81?q=80&w=2000&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
        height: 80vh; /* 80% din înălțimea ecranului */
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        margin-top: -20px; /* Să urce puțin sub navbar */
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 3px;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.5);
        background: -webkit-linear-gradient(#fff, #ccc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 30px;
        font-weight: 300;
        opacity: 0.9;
    }

    /* Carduri de Categorie */
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        overflow: hidden;
        cursor: pointer;
    }

        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2) !important;
        }

    .category-img {
        height: 250px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .category-card:hover .category-img {
        transform: scale(1.1);
    }

    /* Secțiunea de Beneficii */
    .feature-icon {
        font-size: 2.5rem;
        color: #0d6efd; /* Albastrul Bootstrap */
        margin-bottom: 15px;
    }
</style>

@* --- HERO SECTION --- *@
<div class="hero-section container-fluid mb-5">
    <div class="container">
        <h1 class="hero-title">Universul Figurinelor</h1>
        <p class="hero-subtitle">Descoperă eroii care prind viață în colecția ta.</p>
        <a asp-controller="Figurine" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3 fw-bold shadow-lg rounded-pill">
            Explorează Magazinul <i class="bi bi-rocket-takeoff ms-2"></i>
        </a>
    </div>
</div>

@* --- SECȚIUNE BENEFICII --- *@
<div class="container mb-5">
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="p-4 bg-light rounded shadow-sm h-100">
                <i class="bi bi-box-seam feature-icon"></i>
                <h4 class="fw-bold">Ambalare Premium</h4>
                <p class="text-muted">Fiecare figurină este împachetată cu grijă pentru a ajunge impecabil la tine.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-light rounded shadow-sm h-100">
                <i class="bi bi-patch-check feature-icon"></i>
                <h4 class="fw-bold">Produse Originale</h4>
                <p class="text-muted">Garantăm autenticitatea fiecărei piese din colecția noastră.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-light rounded shadow-sm h-100">
                <i class="bi bi-truck feature-icon"></i>
                <h4 class="fw-bold">Livrare Rapidă</h4>
                <p class="text-muted">Comenzile plasate până în ora 14:00 pleacă spre tine în aceeași zi.</p>
            </div>
        </div>
    </div>
</div>

