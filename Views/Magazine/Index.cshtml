@model IEnumerable<MagazinFigurineApp.Models.Magazin>

@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole("Administrator"))
{
    

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProgramLucru)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramLucru)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MagazinID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MagazinID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MagazinID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}