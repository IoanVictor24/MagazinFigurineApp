@model IEnumerable<MagazinFigurineApp.Models.Wishlist>
@{
    ViewData["Title"] = "Lista de dorințe";
}

<style class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex align-items-center">
                <i class="bi bi-heart-fill fs-4 me-2"></i>
                <h2 class="mb-0">WISHLIST</h2>
            </div>
            <p class="text-white-50 mb-0">Figurinele tale salvate</p>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Imagine</th>
                                    <th>Produs</th>
                                    <th>Preț</th>
                                    <th>Acțiuni</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                        <tr>
                                            <td>
                                        @if (item.Figurina.ImagineFigurina != null)
                                        {
                                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Figurina.ImagineFigurina)"
                                                             class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                                        <div class="img-thumbnail" style="width: 80px; height: 80px; background-color: #f5f5f5;"></div>
                                        }
                                            </td>
                                            <td>@item.Figurina.Nume</td>
                                            <td>@item.Figurina.Pret.ToString("C")</td>
                                            <td class="d-flex gap-2">
                                                <form asp-action="Sterge" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                                <a asp-controller="Figurine" asp-action="Details" asp-route-id="@item.Figurina.FigurinaID" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-info-circle"></i>
                                                </a>
                                            </td>
                                        </tr>
                            }
                            </tbody>
                        </table>
                    </div>
            }
            else
            {
                    <div class="text-center py-5">
                        <i class="bi bi-heart" style="font-size: 3rem; color: #6c757d;"></i>
                        <h3 class="mt-3">Lista de dorințe este goală</h3>
                        <p class="text-muted">Nu ai adăugat încă nicio figurină.</p>
                        <a asp-controller="Figurine" asp-action="Index" class="btn btn-primary mt-3">
                            <i class="bi bi-arrow-left"></i> Înapoi la figurine
                        </a>
                    </div>
            }
        </div>
    </div>
