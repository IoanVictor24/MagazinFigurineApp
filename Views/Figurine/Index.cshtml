@using Microsoft.AspNetCore.Identity
@model IEnumerable<MagazinFigurineApp.Models.Figurina>

@{
    ViewData["Title"] = "Catalog Figurine";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold text-dark">Colecția Noastră</h1>
        @if (User.IsInRole("Administrator"))
        {
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle"></i> Adaugă Figurină Nouă
            </a>
        }
    </div>

    @* --- GRID DE FIGURINE --- *@
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm product-card transition-all">

                    <div class="position-relative overflow-hidden" style="height: 250px; background-color: #f8f9fa;">
                        @if (!string.IsNullOrEmpty(item.ImagineUrl))
                        {
                            @* Folosim o cale directă, fără Url.Content dacă acesta dă erori de randare *@
                            <img src="/images/figurine/@item.ImagineUrl"
                                 class="card-img-top h-100 w-100"
                                 style="object-fit: contain;"
                                 alt="@item.Nume">
                        }
                        else
                        {
                            <img src="/images/default-item.png"
                                 class="card-img-top h-100 w-100"
                                 style="object-fit: contain;"
                                 alt="Imagine indisponibilă">
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">@item.Trilogie</small>
                        <h5 class="card-title mb-1 text-truncate">@item.Nume</h5>
                        <p class="card-text fw-bold text-primary mb-3">@item.Pret.ToString("C2")</p>

                        <div class="mt-auto">
                            @* Buton Detalii - Accesibil tuturor *@
                            <a asp-action="Details" asp-route-id="@item.FigurinaID" class="btn btn-outline-dark btn-sm w-100 mb-2">
                                Vezi Detalii
                            </a>

                            @* Logică de Coș pentru User *@
                            @if (User.IsInRole("User") || User.IsInRole("Admin"))
                            {
                                <form asp-controller="Cos" asp-action="Adauga" method="post">
                                    <input type="hidden" name="figurinaId" value="@item.FigurinaID" />
                                    <input type="hidden" name="cantitate" value="1" />
                                    <button type="submit" class="btn btn-success btn-sm w-100 @(item.Stoc <= 0 ? "disabled" : "")">
                                        <i class="bi bi-cart-plus"></i> Adaugă în coș
                                    </button>
                                </form>
                            }

                            @* Butoane Administrative *@
                            @if (User.IsInRole("Administrator"))
                            {
                                <div class="d-flex gap-1 mt-2 border-top pt-2">
                                    <a asp-action="Edit" asp-route-id="@item.FigurinaID" class="btn btn-light btn-sm flex-grow-1 text-muted">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.FigurinaID" class="btn btn-light btn-sm flex-grow-1 text-danger">Delete</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .object-fit-cover {
        object-fit: contain;
        background: #f8f9fa;
    }
</style>